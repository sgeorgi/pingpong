nav.top-bar[data-topbar]
  ul.title-area
    li.name
      h1
        a href="#" = t('header.title')
    li.toggle-topbar.menu-icon
      a href='#' = 'sad'

  section.top-bar-section
    ul.right
      - if FeatureToggle::on?(:locale_switcher)
        li
          a id='locale_de' href="#{url_for( :locale => 'de' )}"
            = image_tag 'de.png'
        li
          a id='locale_en' href="#{url_for( :locale => 'en' )}"
            = image_tag 'us.png'
      - if FeatureToggle::on?(:user_login)
        li.divider
        li.has-dropdown
          a href='#' = t('header.user.title')
          ul.dropdown
            li
              a href='#' = t('header.user.login')
            li
              a href='#' = t('header.user.logout')

    ul.left
      li class="#{current_page?(root_path) ? 'active' : ''}"
        a href='#' = t('header.home')